<!--index.wxml-->
<div class="container real-name">
    <text class="title">实名认证</text>
    <text class="content">更好的推荐适合你的知识</text>
    <input class="input"
        placeholder="输入你的真实姓名"
        bindinput="nameInput"
        value="{{realname}}"
        auto-focus/>
    <input
        class="input"
        placeholder="输入身份证号码"
        type="idcard"
        bindinput="idcardInput"
        value="{{idcard}}"/>
    <text class="error" wx:if="{{isShow}}">请填写真实信息</text>
    <button
        class="submit-btn"
        bindgetphonenumber="submit"
        disabled="{{disabled}}"
        bindtap="submit">
        下一步
    </button>
</div>
