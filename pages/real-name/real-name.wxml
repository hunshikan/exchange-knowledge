<!-- 真实姓名 -->
<div class="container real-name">
    <input class="input"
        placeholder="真实姓名"
        bindinput="nameInput"
        value="{{realname}}"
        auto-focus/>
    <input class="input"
        placeholder="公司职业（产品经理)"
        bindinput="careerInput"
        value="{{career}}"/>
    <div
        class="submit-btn {{disabled ? 'disabled' : ''}}"
        bindgetphonenumber="submit"
        bindtap="submit">
            {{submitBtn}}
    </div>
</div>
