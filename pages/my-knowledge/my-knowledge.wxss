.real-name {
    background: #fff;
    padding: 0 50px;
}
.tip-content {
    display: block;
    padding: 0 15px 55px;
    font-size: 16px;
    line-height: 16px;
    color: #999;
    text-align: center;
}
.title {
    display: block;
    padding: 22px 0 12px;
    font-size: 24px;
    text-align: center;
    font-weight: 700;
}
.content {
    display: block;
    padding: 0 15px 55px;
    font-size: 16px;
    line-height: 16px;
    color: #333;
    text-align: center;
}
.input {
    padding-bottom: 2px;
    margin-bottom: 24px;
    border-bottom: 1px solid #f1f1f1;
    text-align: left;
    font-size: 16px;
    /* background: #51a938; */
}

.input-placeholder {
   color: #ccc;
   font-size: 14px;

}


/*==== 文本输入域区块 ====*/
.textarea-container {
    display: block;
    position: relative;
    width: 100%;
    height: 90px;
    box-sizing: border-box;
    border: 1px solid #f1f1f1;
    padding: 5px 10px;
}
.textarea-container .count {
    position: absolute;
    right: 10px;
    bottom: 10px;
    font-size: 12px;
    color: #666;
}
.textarea {
    display: block;
    width: 100%;
    height: 100%;
    padding: 0;
    box-sizing: border-box;
    font-size: 14px;
    text-align: left;
    line-height: 24px;
}

.textarea-placeholder {
    text-align: left;
    font-size: 14px;
    color: #ccc;
    line-height: 1em;
}
/*==== 提交按钮 ====*/
.submit-btn {
    margin: 45px 10px;
    color: #fff;
    border: 0;
    background: #51a938;
}