/** 我的知识 **/
.real-name {
    background: #fff;
    padding: 0 50px;
}
.title {
    display: block;
    padding: 42px 0 18px;
    font-size: 24px;
    line-height: 1em;
    text-align: center;
}
.content {
    display: block;
    padding: 0 45px 55px;
    font-size: 16px;
    line-height: 16px;
    color: #999;
    text-align: center;
}
.input {
    padding-bottom: 14px;
    margin-bottom: 24px;
    border-bottom: 1px solid #e0e0e0;
    text-align: left;
    /* background: #51a938; */
}
.input-placeholder {
    text-align: left;
    color: #999;
    font-size: 18px;
    line-height: 1em;
    /* background: #999; */
}

/*==== 文本输入域区块 ====*/
.textarea-container {
    display: block;
    position: relative;
    width: 100%;
    height: 90px;
    box-sizing: border-box;
    border: 1px solid #eee;
    padding: 5px 10px;
}
.textarea-container .count {
    position: absolute;
    right: 10px;
    bottom: 10px;
    font-size: 12px;
    color: #999;
}
.textarea {
    display: block;
    width: 100%;
    height: 100%;
    padding: 0;
    box-sizing: border-box;
    font-size: 14px;
    text-align: left;
    /* background: #51a938; */
}
.textarea-placeholder {
    text-align: left;
    font-size: 14px;
    color: #999;
    background: #00ff00;
}
/*==== 提交按钮 ====*/
.submit-btn {
    margin: 45px 10px;
    color: #fff;
    border: 0;
    background: #51a938;
}