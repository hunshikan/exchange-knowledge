/** 搜索附近 **/
.search-nearby {
    background: #fff;
    text-align: center;
}
.title {
    display: block;
    padding: 42px 0 18px;
    font-size: 24px;
    line-height: 1em;
}
map {
  width: 1000px;
  height: 1000px;
}
.map {
    margin: 20px 5px 0 5px;
    height: 0;
    line-height: 0;
    overflow: hidden;
    padding-bottom: 100%;
    background-size: 100%;
    background-repeat: no-repeat;
    border-radius: 2000px;
    background-image: url(https://mmbiz.qpic.cn/mmbiz_png/PYuPblARCpeEFuKPVtg3ickQmIw6eMlZQxRooNqxrDrv3EfSZPGZTertVKBUB2IRSVfgRtVTOBNGfZzO7T2yN2A/0?wx_fmt=png);
}
.content {
    display: block;
    font-size: 16px;
    line-height: 1;
    color: #999;
}
.submit-btn {
    margin: 20px 45px;
    color: #fff;
    border: 0;
    background: #51a938;
}
.fail-btn {
  font-size: 20px;
  color: #d00000
}